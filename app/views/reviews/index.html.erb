<div class="main-title">
<h1>My reviews</h1>

<div class="border-games">
<div class="card-games">
<% @reviews.each do |review| %>
  <div class="card_content">
    <div class="page-fixing">
      <div class="card_details">
         <div class="image-box">
         <img class="review-games" src="<%= cl_image_path review.game.photo.key %>" alt="<%= review.game.title %>">
         </div>
      <p></p>
      <div class="review-title">
      <h1 class="title"><%=review.game.title%></h1>
      <h2 class="subtitle"><%=review.rating%> <i class="fa-solid fa-star"></i></h2>
      <h2 class="subtitle"><%=review.content%></h2>
      </div>
    </div>
   </div>
  </div>
  <% end %>
  </div>
</div>
</div>
